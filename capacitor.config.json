{
  "appId": "com.nihongoapp.mobile",
  "appName": "Nihongo App",
  "webDir": "dist",
  "loggingBehavior": "production",
  "ios": {
    "contentInset": "automatic",
    "prefersStatusBarHidden": false,
    "backgroundColor": "#ffffff"
  },
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchAutoHide": true,
      "launchShowDuration": 0
    },
    "Keyboard": {
      "resize": "body"
    }
  }
}
