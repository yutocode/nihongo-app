{
  "name": "nihongo-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/yutocode/nihongo-app.git"
  },
  "homepage": "https://yutocode.github.io/nihongo-app/",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:gh": "cross-env VITE_DEPLOY_TARGET=gh vite build && node -e \"const fs=require('fs');fs.copyFileSync('dist/index.html','dist/404.html');fs.writeFileSync('dist/.nojekyll','')\"",
    "build:ios": "cross-env VITE_DEPLOY_TARGET=app vite build",
    "preview": "vite preview --host --port 5174",
    "lint": "eslint .",
    "predeploy": "npm run build:gh",
    "deploy": "gh-pages -d dist -b gh-pages",
    "clean-gh": "gh-pages-clean",
    "ios": "npm run build:ios && npx cap copy ios && npx cap open ios",
    "sync:ios": "npx cap sync ios",
    "vocab:collect": "node src/data/scripts/collect-vocab.mjs",
    "vocab:enrich": "node src/data/scripts/enrich-vocab.mjs",
    "vocab:emit": "node src/data/scripts/emit-enriched.mjs",
    "vocab:all": "npm run vocab:collect && npm run vocab:enrich && npm run vocab:emit"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@phosphor-icons/react": "^2.1.10",
    "@scriptin/jmdict-simplified-loader": "^3.6.1",
    "boring-avatars": "^2.0.4",
    "firebase": "^12.0.0",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.552.0",
    "prop-types": "^15.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.1",
    "react-swipeable": "^7.0.2",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fast-glob": "^3.3.3",
    "fast-xml-parser": "^5.3.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "globby": "^15.0.0",
    "prettier": "^3.6.2",
    "vite": "^7.0.4",
    "wanakana": "^5.3.1"
  },
  "engines": {
    "node": ">=18.18"
  }
}
